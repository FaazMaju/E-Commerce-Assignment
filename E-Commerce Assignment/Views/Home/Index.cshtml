@model IEnumerable<E_Commerce_Assignment.Models.product>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/FrontLayout.cshtml";
}

<h2>Our Products</h2>
<div class="products">
    <div class="container">
        <div class="row">
            @foreach (var prod in Model)
            {
                <div class=" col-md-4 p-1 d-flex justify-content-center" >
                        <div class="card bg-dark text-bg-dark" style="width: 18rem;">
                            <img class="card-img-top" src="@prod.p_image" alt="Card image cap">
                            <div class="card-body d-flex justify-content-between">
                                <h5 class="card-title">@prod.p_name</h5>
                                <p class="card-text fw-bold text-warning">$@prod.p_price</p>
                            </div>

                        </div>
                </div>
            }
            
        </div>
        </div>
    </div>
    <div class="pagination">
        <!-- Pagination here -->
    </div>



