@{
    Layout = null;
}
@model E_Commerce_Assignment.Models.user
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
       
        body {
            background-color: #343a40;
            color: #fff;
            font-family: Britannic, sans-serif;
            font-weight: 100;

        }

        .login-container {
            width: 300px;
            margin: 0 auto;
            margin-top: 100px;
            padding: 20px;
            border-radius: 10px;
            background-color: #212529;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            background-color: #343a40;
            color: #fff;
        }

        .btn-login {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            background: linear-gradient(90deg, rgba(0,9,78,1) 0%, rgba(5,5,159,1) 48%, rgba(0,82,255,1) 100%);
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0px 0px 5px 0px #000;
        }

        .btn-login:hover {
            background-color: #27ae60;
        }

        .error-message {
            color: #dc3545;
            margin-top: 5px;
        }
        .alert{
            font-family:'Segoe UI';
            font-weight: 500;
            padding:5px;
            align-items:center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>

        <div class="alert alert-danger alert-dismissible fade  d-none " id="customAlert" role="alert">

            <span id="alertContent"></span>
            <button type="button" class="close btn" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.user_email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.user_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_password, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Login" class="btn-login btn btn-default" />
                </div>
            </div>
            <div class="error-message" id="errorMessage"></div>


        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(document).ready(function () {

            $('#loginForm').submit(function (event) {
                var email = $('#user_email').val(); // Use the correct ID generated by Razor
                var password = $('#user_password').val(); // Use the correct ID generated by Razor



                if (email.length < 6 || password.length < 3) {
                    event.preventDefault();
                    $('#errorMessage').append('Email and password should be at least 6 characters long.');
                }

                // Other email and password validations

                // Add your code here for other validations

            });

        });

        $(window).on('load', function () {

            var urlParams = new URLSearchParams(window.location.search);
            var redirect = urlParams.get('redirected').toString().replace(/'/g, '').toLocaleUpperCase();
            if (redirect) {

                $("#alertContent").append(redirect);

                // Show the alert
                $("#customAlert").removeClass("d-none");
                $("#customAlert").addClass("show d-flex justify-content-between");
                $("#customAlert").fadeIn();

                 //Auto-hide the alert after 3 seconds (adjust as needed)
                setTimeout(function () {
                    $("#customAlert").fadeOut();
                }, 3000);
            }



            // Close the alert when clicking the close button
            $("#customAlert .close").click(function () {
                $("#customAlert").fadeOut();
                $("#customAlert").addClass("d-none");

            });
        });
    </script>
</body>

</html>
